        <Label Content="线程" HorizontalAlignment="Left" Margin="27,55,0,0" VerticalAlignment="Top" Width="92" FontSize="18px"/>
        <CheckBox x:Name="Check" Content="异步" FontSize="18px" HorizontalAlignment="Left" Margin="698,215,0,0" VerticalAlignment="Top"/>
