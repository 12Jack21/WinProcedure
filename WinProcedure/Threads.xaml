        <Button x:Name="front" Content="前台线程" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Height="Auto" Margin="27,148,681,0" />
        <Button x:Name="back" Content="后台线程" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" Height="Auto" Margin="27,172,681,0" />
