<UserControl x:Class="WinProcedure.Message"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WinProcedure"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TextBox x:Name="MsgReceived" HorizontalAlignment="Left" Height="286" Margin="122,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="464"/>
        <Label Content="收到的消息" HorizontalAlignment="Left" Margin="122,65,0,0" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="openBtn" Content="打开发送消息的窗体" HorizontalAlignment="Left" Margin="613,155,0,0" VerticalAlignment="Top" Width="149" Height="36" Click="OpenBtn_Click"/>
        <Button x:Name="clearBtn" Content="清空收到的消息" HorizontalAlignment="Left" Margin="613,228,0,0" VerticalAlignment="Top" Width="149" Height="36" Click="ClearBtn_Click"/>

    </Grid>
</UserControl>
